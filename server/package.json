{
  "name": "blog-be",
  "version": "1.0.0",
  "description": "Back-end for blog exercise",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:up": "sequelize db:migrate",
    "db:down": "sequelize db:migrate:undo:all",
    "seed:up": "sequelize db:seed:all",
    "seed:down": "sequelize db:seed:undo:all",
    "start:server": "NODE_ENV=development nodemon -r dotenv/config index.js",
    "start": "npm run db:up && npm run seed:up && npm run start:server"
  },
  "author": "Shreya Verma",
  "license": "ISC",
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@hapi/hapi": "^21.3.0",
    "dotenv": "^16.0.3",
    "hapi-pino": "^11.0.1",
    "joi": "^17.8.1",
    "pg": "^8.9.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.28.0"
  },
  "devDependencies": {
    "eslint": "^8.34.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "nodemon": "^2.0.20",
    "sequelize-cli": "^6.6.0"
  }
}
